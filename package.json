{
  "name": "engie-serv",
  "version": "1.0.0",
  "description": "engie backend",
  "main": "dist/server.js",
  "scripts": {
    "build-ts": "tsc",
    "build": "npm run build-ts && npm run copy-static-assets",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "serve-debug": "nodemon --inspect dist/server.js",
    "serve": "node dist/server.js",
    "start": "npm run serve",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "watch-node": "nodemon dist/server.js",
    "watch-test": "npm run test -- --watchAll",
    "watch-ts": "tsc -w",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\"  \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "node ./tests/tester.js dev htmlextra",
    "test:cli": "node ./tests/tester.js dev cli",
    "test:prod": "node ./tests/tester.js prod htmlextra",
    "prepare": "husky install",
    "pretty": "prettier -w . "
  },
  "author": "Abdel SASSOUI",
  "license": "ISC",
  "dependencies": {
    "@types/mongodb": "3.6.12",
    "app-root-path": "^3.0.0",
    "bcrypt": "^5.0.1",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "debug": "^4.3.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "http-errors": "^1.8.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.5",
    "mongoose-unique-validator": "^2.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "nodemon": "^2.0.7",
    "pug": "^3.0.2"
  },
  "devDependencies": {
    "@types/concurrently": "6.0.1",
    "@types/cors": "^2.8.10",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/node": "^14.14.41",
    "@types/pug": "2.0.4",
    "@types/shelljs": "0.8.8",
    "chalk": "^4.1.1",
    "concurrently": "^6.0.2",
    "husky": "^6.0.0",
    "newman": "^5.2.2",
    "newman-reporter-htmlextra": "^1.20.3",
    "node-emoji": "^1.10.0",
    "prettier": "^2.2.1",
    "shelljs": "0.8.4",
    "ts-node": "9.1.1",
    "typescript": "^4.2.4"
  },
  "lint-staged": {
    "./**/*.{js,jsx,ts,tsx,json,css,scss,md,html}": "prettier --write"
  }
}
